# Alpaca API (use paper trading first)
ALPACA_API_KEY=your_api_key
ALPACA_SECRET_KEY=your_secret_key
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Finnhub API (for market data - free tier)
FINNHUB_API_KEY=your_finnhub_api_key

# Claude API (for ideation)
ANTHROPIC_API_KEY=your_secret_key

# Database
POSTGRES_USER=algo
POSTGRES_PASSWORD=algo
POSTGRES_DB=trading
DATABASE_URL=postgresql://algo:algo@db:5432/trading

# Ollama (local LLM for trading decisions)
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=qwen3:14b

# Twitter/X API (optional — Bikini Bottom Capital)
# Free tier allows ~500 tweets/month (write-only)
# Get credentials at https://developer.x.com
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# Bluesky API (optional — Bikini Bottom Capital)
# Create an app password at https://bsky.app/settings/app-passwords
BLUESKY_HANDLE=yourhandle.bsky.social
BLUESKY_APP_PASSWORD=your-app-password

# Cloudflare Pages (public dashboard)
# Create project: Cloudflare dashboard → Pages → Create → Direct Upload
# Create token: My Profile → API Tokens → Cloudflare Pages: Edit
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_PAGES_PROJECT=your-project-name
DASHBOARD_URL=https://your-project.pages.dev
